{
  "name": "mercurius-auth",
  "version": "0.0.0",
  "description": "Mercurius Auth Plugin adding configurable Authentication and Authorization support to Mercurius.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "unit": "tap --100 test/*.js",
    "cov": "tap --coverage-report=html -J test/*.js",
    "lint": "npm run lint:standard && npm run lint:typescript",
    "lint:standard": "standard | snazzy",
    "lint:typescript": "standard --parser @typescript-eslint/parser --plugin @typescript-eslint/eslint-plugin test/types/*.ts",
    "typescript": "tsd",
    "test": "npm run lint && npm run unit && npm run typescript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercurius-js/auth.git"
  },
  "author": "Jonny Green <hello@jonnydgreen.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mercurius-js/auth/issues"
  },
  "homepage": "https://github.com/mercurius-js/auth",
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "autocannon": "^7.0.5",
    "fastify": "^3.0.2",
    "mercurius": "^7.3.3",
    "pre-commit": "^1.2.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "tap": "^15.0.2",
    "tsd": "^0.14.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "fastify-plugin": "^3.0.0",
    "graphql": "^15.4.0"
  },
  "tsd": {
    "directory": "test/types"
  }
}
